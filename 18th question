package Com.Sample;
import java.util.*;

// ------- Product Bean Class -------
class Product {
    private int id;
    private String name;
    private double price;

    // Constructor
    public Product(int id, String name, double price) {
        this.id = id;
        this.name = name;
        this.price = price;
    }

    // Getters
    public int getId() { return id; }
    public String getName() { return name; }
    public double getPrice() { return price; }

    // toString() for printing product details
    public String toString() {
        return "ID: " + id + ", Name: " + name + ", Price: " + price;
    }

    // HashSet needs equals() and hashCode() to avoid duplicates
    public boolean equals(Object o) {
        if (this == o) return true;
        if (!(o instanceof Product)) return false;
        Product p = (Product) o;
        return id == p.id;
    }

    public int hashCode() {
        return Objects.hash(id);
    }
}

// ------- Client Class (Seller + Customer) -------
public class Commerce {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        // Seller adds products to HashSet
        HashSet<Product> products = new HashSet<>();
        products.add(new Product(1, "Laptop", 55000));
        products.add(new Product(2, "Headphones", 2000));
        products.add(new Product(3, "Smartphone", 30000));

        System.out.println("Available Products:");
        for (Product p : products) {
            System.out.println(p);
        }

        // Customer places an order
        System.out.print("\nEnter product IDs to order (comma separated): ");
        String[] ids = sc.nextLine().split(",");

        double total = 0;
        System.out.println("\nOrdered Products:");
        for (String idStr : ids) {
            int id = Integer.parseInt(idStr.trim());
            for (Product p : products) {
                if (p.getId() == id) {
                    System.out.println(p);
                    total += p.getPrice();
                }
            }
        }

        System.out.println("\nTotal Price = " + total);
        sc.close();
    }


OUTPUT:
Available Products:
ID: 1, Name: Laptop, Price: 55000.0
ID: 2, Name: Headphones, Price: 2000.0
ID: 3, Name: Smartphone, Price: 30000.0

Enter product IDs to order (comma separated): 1,2

Ordered Products:
ID: 1, Name: Laptop, Price: 55000.0
ID: 2, Name: Headphones, Price: 2000.0

Total Price = 57000.0

}
