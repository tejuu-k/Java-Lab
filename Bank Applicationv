package Com.r9;
import java.util.Scanner;

class Account {
    int accNo;
    String name;
    String aadhar;
    String pan;
    double balance;

    Account(int accNo, String name, String aadhar, String pan) {
        this.accNo = accNo;
        this.name = name;
        this.aadhar = aadhar;
        this.pan = pan;
        this.balance = 0; // default balance
    }
}

public class BankApplication {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        Account[] accounts = new Account[100]; // store up to 100 accounts
        int accountCount = 0; // track number of accounts created
        int choice;
        String cont;

        do {
            System.out.println("\n====== Bank Menu ======");
            System.out.println("1. Account Creation");
            System.out.println("2. Credit Amount");
            System.out.println("3. Debit Amount");
            System.out.println("4. Balance Enquiry");
            System.out.println("5. Transfer Amount");
            System.out.println("6. Exit");
            System.out.print("Enter your choice: ");
            choice = sc.nextInt();

            switch (choice) {
                case 1: // Account creation
                    System.out.print("Enter Account Number: ");
                    int accNo = sc.nextInt();
                    sc.nextLine(); // consume newline
                    System.out.print("Enter Customer Name: ");
                    String name = sc.nextLine();
                    System.out.print("Enter Aadhar Number: ");
                    String aadhar = sc.nextLine();
                    System.out.print("Enter PAN Number: ");
                    String pan = sc.nextLine();

                    accounts[accountCount] = new Account(accNo, name, aadhar, pan);
                    accountCount++;
                    System.out.println("✅ Account created successfully!");
                    break;

                case 2: // Credit
                    System.out.print("Enter Account Number: ");
                    int cAccNo = sc.nextInt();
                    System.out.print("Enter Amount to Credit: ");
                    double cAmt = sc.nextDouble();

                    for (int i = 0; i < accountCount; i++) {
                        if (accounts[i].accNo == cAccNo) {
                            accounts[i].balance += cAmt;
                            System.out.println("✅ Amount Credited Successfully! Current Balance: " + accounts[i].balance);
                        }
                    }
                    break;

                case 3: // Debit
                    System.out.print("Enter Account Number: ");
                    int dAccNo = sc.nextInt();
                    System.out.print("Enter Amount to Debit: ");
                    double dAmt = sc.nextDouble();

                    for (int i = 0; i < accountCount; i++) {
                        if (accounts[i].accNo == dAccNo) {
                            if (accounts[i].balance >= dAmt) {
                                accounts[i].balance -= dAmt;
                                System.out.println("✅ Amount Debited Successfully! Current Balance: " + accounts[i].balance);
                            } else {
                                System.out.println("❌ Insufficient Balance!");
                            }
                        }
                    }
                    break;

                case 4: // Balance Enquiry
                    System.out.print("Enter Account Number: ");
                    int bAccNo = sc.nextInt();

                    for (int i = 0; i < accountCount; i++) {
                        if (accounts[i].accNo == bAccNo) {
                            System.out.println("Account Holder: " + accounts[i].name);
                            System.out.println("Balance: " + accounts[i].balance);
                        }
                    }
                    break;

                case 5: // Transfer
                    System.out.print("Enter FROM Account Number: ");
                    int fromAcc = sc.nextInt();
                    System.out.print("Enter TO Account Number: ");
                    int toAcc = sc.nextInt();
                    System.out.print("Enter Amount to Transfer: ");
                    double tAmt = sc.nextDouble();

                    Account from = null, to = null;
                    for (int i = 0; i < accountCount; i++) {
                        if (accounts[i].accNo == fromAcc) {
                            from = accounts[i];
                        }
                        if (accounts[i].accNo == toAcc) {
                            to = accounts[i];
                        }
                    }

                    if (from != null && to != null) {
                        if (from.balance >= tAmt) {
                            from.balance -= tAmt;
                            to.balance += tAmt;
                            System.out.println("✅ Transfer Successful!");
                            System.out.println("From Account Balance: " + from.balance);
                            System.out.println("To Account Balance: " + to.balance);
                        } else {
                            System.out.println("❌ Insufficient Balance in From Account!");
                        }
                    } else {
                        System.out.println("❌ Invalid Account Numbers!");
                    }
                    break;

                case 6:
                    System.out.println("Thank you for using our Bank Application!");
                    System.exit(0);
                    break;

                default:
                    System.out.println("❌ Invalid Choice! Try again.");
            }

            System.out.print("Do you want to continue? (yes/no): ");
            cont = sc.nextLine();

        } while (cont == "yes" || cont == "YES");

        sc.close();
    }
}
OUTPUT:

====== Bank Menu ======
1. Account Creation
2. Credit Amount
3. Debit Amount
4. Balance Enquiry
5. Transfer Amount
6. Exit
Enter your choice: 1
Enter Account Number: 1000
Enter Customer Name: tejaswini
Enter Aadhar Number: 3256 2783 4943
Enter PAN Number: 4737847
✅ Account created successfully!
